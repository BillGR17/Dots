#!/usr/bin/zsh
# Fast kill -9  to one or more apps 
if [ "$1" ];then
  res=$(ps ax|grep $1|grep -v "grep"|awk '{$2=$3=$4="";print $0}')
  if [ ! -z "$res" ];then
    echo -e "[$1]\n[Results]\n~~~~~~\n$(echo "$res"|awk '{$1="";print $0}')\n~~~~~~\n[KILL]?(?)! [Y/N]?"
    read -s r
    if [[ "$r" =~ ^([yY][eE][sS]|[yY])+$ ]];then
      echo ""
      kill -9 $(echo $res|cut -d " " -f1)
    fi
  else
    echo "No Process with name $1"
  fi
else
  echo "No Input"
fi
