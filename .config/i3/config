#BAR SETTINGS#
##############

bar {
  output $p
  output $s
  tray_output $p
  status_command i3blocks -c ~/.config/i3/blocks/i3blocks.conf
  font pango: Hack 10
  height 20
  colors {
    background         $nord0
    statusline         $nord8
    focused_workspace  $nord0  $nord8
    active_workspace   $nord7  $nord3
    inactive_workspace $nord8  $nord0
    urgent_workspace   $nord0  $nord11
  }
}
