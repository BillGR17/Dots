#!/bin/bash
# Fast kill -9 for one or more apps
if [ "$1" ];then
  IFS=$'\n'
  res=( $(pgrep $1) )
  if [ ! -z "$res" ];then
    echo -e "[$1]\n[Results]\n~~~~~~\n"
    for ((i=0;i<${#res[@]};i++));do
      cat /proc/${res[$i]}/cmdline
      echo -e " "$(pmap -x ${res[$i]}|tail -1|awk '$3 ~/[0-9\.]/ { $3 = int($3 / 1024)"mb"} {print $3}')
   done
    echo -e "\n~~~~~~\n[KILL]?(?)! [Y/N]?"
    read -s r
    if [[ "$r" =~ ^([yY][eE][sS]|[yY])+$ ]];then
      echo ""
      kill -9 $(echo "$res"|awk '{print $1}')
    fi
  else
    echo "No Process with name $1"
  fi
else
  echo "No Input"
fi
